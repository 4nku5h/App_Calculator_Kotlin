<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    tools:context=".MainActivity">\

    <EditText
        android:id="@+id/edit_text_result"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="#5e5a5a"
        android:foregroundGravity="top"
        android:gravity="right"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="459dp"
        android:layout_marginTop="100dp"
        android:foregroundGravity="bottom"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_ac"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#e2d9d9"
                android:onClick="btn_clean_event"
                android:text="AC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_plus_mins"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="+/-"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_percent_event"
                android:text="%"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:onClick="btn_operation_event"
                android:text="/"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="7"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="9"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:onClick="btn_operation_event"
                android:text="X"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.1dp">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="6"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_mins"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:onClick="btn_operation_event"
                android:text="-"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.1dp">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sum"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:onClick="btn_operation_event"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_0"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_weight="1"
                android:background="#f2eaea"
                android:onClick="btn_number_event"
                android:text="."
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_eql"
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="0.1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:background="@android:color/holo_orange_dark"
                android:onClick="btn_eql_event"
                android:text="="
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/my_name_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="99dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_gravity="top"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="#@cker's Studio "
            android:textColor="@android:color/holo_green_dark"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="App"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="By Ankush Shrivastava"
            android:textColor="@android:color/background_dark"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>